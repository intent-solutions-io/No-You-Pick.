# NoYouPick Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# FRONTEND (Vite)
# ===========================================

# Gemini API Key for local development (frontend direct calls)
# NOTE: In production, frontend calls go through Cloud Functions
# This key is only used for local development with emulators
VITE_GEMINI_API_KEY=your-gemini-api-key-here

# API Base URL
# Local development: http://localhost:5001/noupick-staging/us-central1/api
# Production: https://us-central1-noupick-prod.cloudfunctions.net/api
VITE_API_BASE_URL=http://localhost:5001/noupick-staging/us-central1/api

# ===========================================
# SUPABASE (Existing Integration)
# ===========================================

# Supabase URL and Anon Key
# These remain unchanged from current setup
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ===========================================
# FIREBASE (Cloud Functions)
# ===========================================

# Firebase Project ID
# Staging: noupick-staging
# Production: noupick-prod
FIREBASE_PROJECT_ID=noupick-staging

# For emulator connection
FIRESTORE_EMULATOR_HOST=localhost:8080
FUNCTIONS_EMULATOR_HOST=localhost:5001
